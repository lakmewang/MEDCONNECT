<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Available Medicines</title>
</head>
<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }

  th {
    background-color: #f2f2f2;
  }
</style>
<body>
  <h1>Available Medicines</h1>
  
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Details</th>
        <th>Image</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(medicine => { %>
        <tr>
          <td><%= medicine.Name %></td>
          <td><%= medicine.Price %></td>
          <td><%= medicine.Details %></td>
          <td><img src="data:<%= medicine.Image.contentType %>;base64,<%= medicine.Image.data.toString('base64') %>" alt="<%= medicine.Name %>"></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
      <br> <br> 
    <a href="/admin">Back</a>
</body>
</html>
